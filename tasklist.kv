
# background-dark: 0.204, 0.227, 0.251, 1 
# background-light: 0.424, 0.459, 0.49, 1
# foreground: 0.914, 0.925, 0.937, 1
# red color: 0.86, 0.21, 0.27, 1
# green color: 0.09, 0.53, 0.33, 1

<CheckButton@Button>:
    text: '裸'
    font_name: 'Noto Buttons'
    font_size: 36
    background_normal: ''
    background_down: ''
    background_disabled_normal: ''
    background_color: 0.204, 0.227, 0.251, 1
    color: 0.424, 0.459, 0.49, 1
    size_hint: 0.1, 1
    on_release: root.remove_task()

<TaskLabel@Label>:
    markup: True
    valign: 'top'
    halign: 'left'
    text_size: self.size
    font_name: 'Noto'
    font_size: 30
    color: 0.914, 0.925, 0.937, 1

<BigButton@Button>:
    font_name: 'Noto Buttons'
    font_size: 52
    bold: True
    size_hint: 1, 0.15
    background_normal: ''
    background_down: ''
    color: 0.914, 0.925, 0.937, 1

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0, 35, 0, 0
        row_default_height: '48dp'
        row_force_default: True
        spacing: 0, 10
        size: root.size

        ScrollView:
            size: self.size

            GridLayout:
                id: tasks_layout
                size_hint_y: None
                cols: 2
                row_default_height: '48dp'
                row_force_default: True
                spacing: 0, 10
                padding: 0, 0

        BigButton:
            text: ' Nueva tarea'
            background_color: 0.09, 0.53, 0.33, 1

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'add_task_screen'
                root.manager.get_screen('add_task_screen').ids['new_task_name'].focus = True

<AddTaskScreen>:
    FloatLayout:
        size: root.size

        Button:
            text: ''
            font_name: 'Noto Buttons'
            font_size: 45
            background_normal: ''
            background_down: ''
            background_color: 0.204, 0.227, 0.251, 1
            color: 0.424, 0.459, 0.49, 1
            size_hint: 0.1, 0.1
            pos_hint: {'top': 1, 'x': 0}

            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'main_screen'

        Label:
            text: 'Contenido de la tarea'
            font_name: 'Noto'
            font_size: 30
            color: 0.914, 0.925, 0.937, 1
            size_hint: 1, 0.15
            pos_hint: {'top': 0.94}

        TextInput:
            id: new_task_name
            font_name: 'Noto'
            font_size: 30
            foreground_color: 0.204, 0.227, 0.251, 1 
            background_color: 0.914, 0.925, 0.937, 1
            cursor_color: 0.86, 0.21, 0.27, 1
            cursor_width: '2sp'
            size_hint: 0.9, 0.06
            pos_hint: {'top': 0.825, 'center_x': 0.5}
            multiline: False
            focus: True
            padding: [12, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines)]
            on_text_validate: root.add_task()

        BigButton:
            text: ' Añadir'
            background_color: 0.09, 0.53, 0.33, 1
            size_hint: 1, 0.125
            pos_hint: {'bottom': 0.9}
            on_release: root.add_task()