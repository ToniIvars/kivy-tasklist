
# background-dark: 0.204, 0.227, 0.251, 1 
# background-light: 0.424, 0.459, 0.49, 1
# foreground: 0.914, 0.925, 0.937, 1
# red color: 0.86, 0.21, 0.27, 1
# green color: 0.09, 0.53, 0.33, 1
# yellow color: 1, 0.76, 0.03, 1

<CheckButton@Button>:
    text: ''
    font_name: 'Noto'
    font_size: 36
    background_normal: ''
    background_down: ''
    background_color: 0.204, 0.227, 0.251, 1
    size_hint: 0.15, 1
    on_press: self.click()

<TaskLabel@Label>:
    valign: 'middle'
    halign: 'left'
    text_size: self.size
    font_name: 'Noto'
    font_size: 30

<MainLayout>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0, 30, 0, 0
        row_default_height: '48dp'
        row_force_default: True
        spacing: 0, 10
        size: root.size

        ScrollView:
            size: self.size

            GridLayout:
                size_hint_y: None
                cols: 2
                row_default_height: '48dp'
                row_force_default: True
                spacing: 0, 10
                padding: 0, 0

                CheckButton:
                    id: button_1

                TaskLabel:
                    text: 'Task 1'
                    task_id: 1

                CheckButton:
                    id: button_2

                TaskLabel:
                    text: 'Task 2'
                    task_id: 2

                CheckButton:
                    id: button_3

                TaskLabel:
                    text: 'Task 3'
                    task_id: 3           

        Button:
            id: add_task_btn
            text: ' Nueva tarea'
            font_name: 'Noto'
            font_size: 52
            bold: True
            size_hint: 1, 0.15
            background_normal: ''
            background_down: ''
            background_color: 0.09, 0.53, 0.33, 1
            color: 0.914, 0.925, 0.937, 1

            on_press: root.add_task()